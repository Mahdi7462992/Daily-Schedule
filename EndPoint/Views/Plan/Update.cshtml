@model List<Plan>

@{
    ViewData["Title"] = "Edit Plans for " + Model.FirstOrDefault()?.DayOfWeek.ToString();
}

<h1>Edit Plans for @Model.FirstOrDefault()?.DayOfWeek</h1>

<form asp-action="Update" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <input type="hidden" asp-for="@Model[i].Id" />
        <div class="form-group">
            <label asp-for="@Model[i].Detail" class="control-label"></label>
            <input asp-for="@Model[i].Detail" class="form-control" />
            <span asp-validation-for="@Model[i].Detail" class="text-danger"></span>
        </div>
        <hr />
    }
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
